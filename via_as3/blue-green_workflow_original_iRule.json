Deploy
POST https://x.x.x.x/mgmt/shared/appsvcs/declare

Blue-Green Apply
{
  "class": "AS3",
  "action": "deploy",
  "persist": true,
  "declaration": {
    "class": "ADC",
    "schemaVersion": "3.41.0",
    "id": "example-declaration-01",
    "label": "Sample 1",
    "remark": "Simple HTTP application with RR pool",
    "blue_green_demo": {
      "class": "Tenant",
      "Application_1": {
        "class": "Application",
        "blue_green_vip1": {
          "class": "Service_HTTP",
          "virtualAddresses": [
            "x.x.x.y"
          ],
          "allowVlans": [
            {
               "bigip": "/Common/external"
            }
         ],
          "pool": "blue_pool",
          "persistenceMethods": [],
          "iRules": [
            "blue_green_vip1_bluegreen_irule"
          ]
        },
        "blue_pool": {
          "class": "Pool",
          "monitors": [
            "http"
          ],
          "members": [{
            "servicePort": 80,
            "serverAddresses": [
              "x.x.x.b_1",
              "x.x.x.b_2"
            ]
          }]
        },
        "green_pool": {
          "class": "Pool",
          "monitors": [
            "http"
          ],
          "members": [{
            "servicePort": 80,
            "serverAddresses": [
              "x.x.x.g_1",
              "x.x.x.g_2"
            ]
          }]
        },
        "blue_green_vip1_bluegreen_irule": {
          "class": "iRule",
          "remark": "blue green workflow",
          "iRule": "when CLIENT_ACCEPTED {\nset rand [expr {[TCP::client_port] % 100}]\nif { $rand > 80 }\n{pool {/blue_green_demo/Application_1/green_pool}\n}\n}"
        }
      }
    }
  }
}

