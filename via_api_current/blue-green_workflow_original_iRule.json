PATCH https://35.238.166.47/mgmt/tm/ltm/virtual/~blue_green_demo~Application_1~blue_green_vip1

{
    "rules": [{{service}}_bluegreen_irule]
}

{
    "rules": ["blue_green_vip1_bluegreen_irule"]
}
    

